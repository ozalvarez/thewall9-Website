@model thewall9.data.binding.ContentBindingList
@{

}
@section styles{

}
@section scripts{

}
<section id="services">
    <canvas id="services-canvas"></canvas>
    <div class="container">
        <h2>@Html.FindValue(Model, "title")</h2>
        <p class="subtitle">@Html.FindValue(Model, "subtitle")</p>
        <i class="separator separator-white"></i>
        <div class="row">
            @foreach (var item in Html.FindItems(Model, "services-list"))
            {
                <div class="col-md-3 service">
                    <a class="icon" href="#">
                        @Html.Raw(Html.FindValue(item, "icon-svg"))

                    </a>
                    <p>
                        <a href="#">
                            @Html.FindValue(item, "title")
                        </a>
                    </p>
                </div>
            }
        </div>
        <p class="text-center all">
            <a href="@Html.FindValue(Model, "more-services-btn-url")" class="btn btn-dark btn-lg">
                @Html.FindValue(Model, "more-services-btn-text")
            </a>
        </p>
    </div>
</section>
